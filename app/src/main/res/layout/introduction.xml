<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:text="@string/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <TextView
                        android:text="State"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_weight="0.4"
                        android:textStyle="normal|bold"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000" />

                    <TextView
                        android:text="Daily Cases at 24/2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblDate1"
                        android:layout_weight="0.2"
                        android:textStyle="normal|bold"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000" />

                    <TextView
                        android:text="Cummulated Cases From"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblDate2"
                        android:layout_weight="0.4"
                        android:textStyle="normal|bold"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:text="State"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblState"
                        android:layout_weight="0.4"
                        android:textSize="12sp" />

                    <TextView
                        android:text="Daily Cases at 24/2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblNo1"
                        android:layout_weight="0.2"
                        android:textSize="12sp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:text="Cummulated Cases From"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblNo2"
                        android:layout_weight="0.4"
                        android:textSize="12sp"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="@string/intro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/bg"
                android:layout_marginTop="16dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <TextView
                        android:text="Cases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/blue"
                            android:id="@+id/imageView4"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center" />

                        <TextView
                            android:text="245,570"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <TextView
                        android:text="Death"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/textView17"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/red"
                            android:id="@+id/imageView3"
                            android:adjustViewBounds="true"
                            android:layout_below="@+id/textView17"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center" />

                        <TextView
                            android:text="548"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginBottom="-150dp"
                    android:padding="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>